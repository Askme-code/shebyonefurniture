rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------
    // Helper Functions
    // ------------------------------

    // Checks if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Checks if the current user is an admin
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Checks if the current user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ------------------------------
    // Products - Public catalog
    // ------------------------------
    match /products/{productId} {
      allow get, list: if true;             // Everyone can view
      allow create, update, delete: if isAdmin();  // Only admins can modify
    }

    // ------------------------------
    // Orders - Users and admins
    // ------------------------------
    match /orders/{orderId} {

      // Create a new order → only the owner (user) can create
      allow create: if isOwner(request.resource.data.userId);

      // Get a single order → only owner or admin
      allow get: if isOwner(resource.data.userId) || isAdmin();

      // List orders → admin sees all, user sees only their own if query is correct
      allow list: if isAdmin() || (isSignedIn() && request.query.where.keys().hasAny(['userId']) && request.query.where.userId == request.auth.uid);

      // Update/Delete → only admins
      allow update, delete: if isAdmin();
    }

    // ------------------------------
    // Users - Profile data
    // ------------------------------
    match /users/{userId} {
      allow get, update: if isOwner(userId) || isAdmin();  // User can manage own profile
      allow create: if isSignedIn();                       // Users can create their own profile
      allow delete: if isAdmin();                          // Only admins can delete users
      allow list: if isAdmin();                            // Only admins can list all users
    }

    // ------------------------------
    // Admin roles
    // ------------------------------
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();     // Only admins can manage admin roles
      allow get: if isOwner(userId);       // Users can check if they are admin
      allow list: if false;                // No listing allowed
    }

    // ------------------------------
    // Messages - Contact form
    // ------------------------------
    match /messages/{messageId} {
      function isValidMessage() {
        let data = request.resource.data;
        return data.keys().hasAll(['name', 'email', 'message', 'createdAt', 'isRead'])
          && data.name is string && data.name.size() > 0
          && data.email is string && data.email.matches('^[^@]+@[^@]+\\.[^@]+$')
          && data.message is string && data.message.size() > 0
          && data.isRead == false; // New messages must be unread
      }

      allow create: if isValidMessage();
      allow get, list, update, delete: if isAdmin();
    }

    // ------------------------------
    // Newsletter subscribers
    // ------------------------------
    match /newsletter_subscribers/{subscriberId} {
      function isValidSubscription() {
        let email = request.resource.data.email;
        return email is string && email.matches('^[^@]+@[^@]+\\.[^@]+$') && request.resource.data.keys().hasAll(['email', 'createdAt']);
      }

      allow create: if isValidSubscription();
      allow read, list, update, delete: if isAdmin();
    }
  }
}
