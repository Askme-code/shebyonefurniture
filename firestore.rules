rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------
    // Helper Functions
    // ------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isValidOrderCreate() {
      let data = request.resource.data;
      // Check for required fields and valid data types on order creation.
      return data.keys().hasAll(['customerName', 'phone', 'address', 'items', 'total', 'status', 'userId', 'createdAt'])
        && data.customerName is string && data.customerName.size() > 0
        && data.phone is string && data.phone.size() > 0
        && data.address is string && data.address.size() > 0
        && data.items is list && data.items.size() > 0
        && data.total is number && data.total >= 0
        && data.status == 'Pending'
        && data.userId == request.auth.uid;
    }

    function isValidMessage() {
      let data = request.resource.data;
      return data.keys().hasAll(['name', 'email', 'message', 'createdAt', 'isRead'])
        && data.name is string && data.name.size() > 0
        && data.email is string && data.email.matches('^[^@]+@[^@]+\\.[^@]+$')
        && data.message is string && data.message.size() > 0
        && data.isRead == false;
    }
    
    function isValidSubscription() {
      let data = request.resource.data;
      return data.email is string &&
             data.email.matches('^[^@]+@[^@]+\\.[^@]+$') &&
             data.keys().hasAll(['email', 'createdAt']);
    }

    // ------------------------------
    // Products - Public catalog
    // ------------------------------
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // ------------------------------
    // Orders - Users and admins
    // ------------------------------
    match /orders/{orderId} {
      allow create: if isOwner(request.resource.data.userId) && isValidOrderCreate();
      // 'read' combines 'get' and 'list'.
      // This allows a user to query the collection, and Firestore's query engine
      // ensures they only receive documents where `resource.data.userId` matches their own UID.
      // Admins can read all documents.
      allow read: if isAdmin() || isOwner(resource.data.userId);
      allow update, delete: if isAdmin();
    }

    // ------------------------------
    // Users - Profile data
    // ------------------------------
    match /users/{userId} {
      allow create: if isSignedIn();
      allow get, update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      allow list: if isAdmin();
    }

    // ------------------------------
    // Admin roles
    // ------------------------------
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
      allow get: if isOwner(userId);
      allow list: if false;
    }

    // ------------------------------
    // Messages - Contact form
    // ------------------------------
    match /messages/{messageId} {
      allow create: if isValidMessage();
      allow get, list, update, delete: if isAdmin();
    }

    // ------------------------------
    // Newsletter subscribers
    // ------------------------------
    match /newsletter_subscribers/{subscriberId} {
      allow create: if isValidSubscription();
      allow read, list, update, delete: if isAdmin();
    }
  }
}
