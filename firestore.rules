
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==============================
    // Helper Functions
    // ==============================

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ==============================
    // Validators
    // ==============================

    function isValidOrderCreate() {
      let d = request.resource.data;
      return d.keys().hasAll([
        'customerName', 'phone', 'address',
        'items', 'total', 'status',
        'userId', 'createdAt'
      ])
      && d.customerName is string && d.customerName.size() > 0
      && d.phone is string && d.phone.size() > 0
      && d.address is string && d.address.size() > 0
      && d.items is list && d.items.size() > 0
      && d.total is number && d.total >= 0
      && d.status == 'Pending'
      && d.userId == request.auth.uid;
    }

    function isValidMessage() {
      let d = request.resource.data;
      return d.keys().hasAll(['name', 'email', 'message', 'createdAt', 'isRead'])
        && d.name is string && d.name.size() > 0
        && d.email is string
        && d.email.matches('^[^@]+@[^@]+\\.[^@]+$')
        && d.message is string && d.message.size() > 0
        && d.isRead == false;
    }

    function isValidSubscription() {
      let d = request.resource.data;
      return d.keys().hasAll(['email', 'createdAt'])
        && d.email is string
        && d.email.matches('^[^@]+@[^@]+\\.[^@]+$');
    }

    function isValidReviewCreate() {
      let d = request.resource.data;
      return isSignedIn()
        && d.keys().hasAll([
          'userId', 'name',
          'rating', 'message',
          'status', 'createdAt'
        ])
        && d.userId == request.auth.uid
        && d.name is string && d.name.size() > 0
        && d.rating is number && d.rating >= 1 && d.rating <= 5
        && d.message is string && d.message.size() >= 10
        && d.status == 'pending';
    }

    // ==============================
    // PUBLIC REVIEWS (SAFE & CORRECT)
    // ==============================
    match /reviews_public/{reviewId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // ==============================
    // PRIVATE REVIEWS (SAFE & CORRECT)
    // ==============================
    match /reviews_private/{reviewId} {
      // User submits a new review for moderation
      allow create: if isValidReviewCreate();

      // Users can read their own submissions, Admins can read all
      allow read: if isAdmin() || isOwner(resource.data.userId);

      // Admins can moderate (approve/reject)
      allow update, delete: if isAdmin();
    }

    // ==============================
    // Products (Public)
    // ==============================
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // ==============================
    // Orders (SAFE & CORRECT)
    // ==============================
    match /orders/{orderId} {
      // Create order
      allow create: if isOwner(request.resource.data.userId) && isValidOrderCreate();

      // Get single order
      allow get: if isAdmin() || isOwner(resource.data.userId);

      // List orders
      // - Admins can list all orders.
      // - Users can list orders ONLY if they include a 'where("userId", "==", uid)' clause.
      allow list: if isAdmin() || (isSignedIn() && request.query.where.keys().hasAny(['userId']));
        
      // Update (e.g., a user cancelling their own pending order)
      allow update: if isAdmin() || (isOwner(resource.data.userId) && resource.data.status == 'Pending' && request.resource.data.keys().hasOnly(['status']) && request.resource.data.status == 'Cancelled');

      allow delete: if isAdmin();
    }

    // ==============================
    // Users
    // ==============================
    match /users/{userId} {
      allow create: if isSignedIn();
      allow get, update: if isOwner(userId) || isAdmin();
      allow list, delete: if isAdmin();
    }

    // ==============================
    // Admin Roles (SAFE & CORRECT)
    // ==============================
    match /roles_admin/{userId} {
      // Allow users to check their own role status to prevent circular dependencies in `isAdmin()`
      allow get: if isOwner(userId) || isAdmin();
      
      // Only admins can grant/revoke admin status
      allow write: if isAdmin();

      // Prevent anyone from listing all admins for security
      allow list: if false;
    }

    // ==============================
    // Messages
    // ==============================
    match /messages/{messageId} {
      allow create: if isValidMessage();
      allow get, list, update, delete: if isAdmin();
    }

    // ==============================
    // Newsletter Subscribers
    // ==============================
    match /newsletter_subscribers/{subscriberId} {
      allow create: if isValidSubscription();
      allow read, list, update, delete: if isAdmin();
    }
  }
}
