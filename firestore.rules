
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==============================
    // Helper Functions
    // ==============================

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ==============================
    // Validators
    // ==============================

    function isValidOrderCreate() {
      let d = request.resource.data;
      return d.keys().hasAll([
        'customerName', 'phone', 'address',
        'items', 'total', 'status',
        'userId', 'createdAt'
      ])
      && d.customerName is string && d.customerName.size() > 0
      && d.phone is string && d.phone.size() > 0
      && d.address is string && d.address.size() > 0
      && d.items is list && d.items.size() > 0
      && d.total is number && d.total >= 0
      && d.status == 'Pending'
      && d.userId == request.auth.uid;
    }

    function isValidMessage() {
      let d = request.resource.data;
      return d.keys().hasAll(['name', 'email', 'message', 'createdAt', 'isRead'])
        && d.name is string && d.name.size() > 0
        && d.email is string
        && d.email.matches('^[^@]+@[^@]+\\.[^@]+$')
        && d.message is string && d.message.size() > 0
        && d.isRead == false;
    }

    function isValidSubscription() {
      let d = request.resource.data;
      return d.keys().hasAll(['email', 'createdAt'])
        && d.email is string
        && d.email.matches('^[^@]+@[^@]+\\.[^@]+$');
    }

    function isValidReviewCreate() {
      let d = request.resource.data;
      return isSignedIn()
        && d.keys().hasAll([
          'userId', 'name',
          'rating', 'message',
          'status', 'createdAt'
        ])
        && d.userId == request.auth.uid
        && d.name is string && d.name.size() > 0
        && d.rating is number && d.rating >= 1 && d.rating <= 5
        && d.message is string && d.message.size() >= 10
        && d.status == 'pending';
    }
    
    // ==============================
    // PUBLIC REVIEWS (SAFE)
    // ==============================
    match /reviews_public/{reviewId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // ==============================
    // PRIVATE REVIEWS
    // ==============================
    match /reviews_private/{reviewId} {

      // User submits review
      allow create: if isValidReviewCreate();

      // User can read their own reviews, Admin can read any
      allow read: if isAdmin() || isOwner(resource.data.userId);

      // Admin moderation (update is used for status change)
      allow update, delete: if isAdmin();
    }

    // ==============================
    // Products (Public)
    // ==============================
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // ==============================
    // Orders
    // ==============================
    match /orders/{orderId} {

      // Create order
      allow create: if isOwner(request.resource.data.userId)
                    && isValidOrderCreate();

      // Read (get + list)
      // Admin: all
      // User: only their own orders (enforced by client-side query)
      allow read: if isAdmin() || isOwner(resource.data.userId);

      // Cancel order (user)
      allow update: if isAdmin()
        || (
          isOwner(resource.data.userId)
          && resource.data.status == 'Pending'
          && request.resource.data.keys().hasOnly(['status'])
          && request.resource.data.status == 'Cancelled'
        );

      allow delete: if isAdmin();
    }

    // ==============================
    // Users
    // ==============================
    match /users/{userId} {
      allow create: if isSignedIn();
      allow get, update: if isOwner(userId) || isAdmin();
      allow delete, list: if isAdmin();
    }

    // ==============================
    // Admin Roles
    // ==============================
    match /roles_admin/{userId} {
      // Any signed-in user can check their own role document.
      // This is required for the isAdmin() helper to work without circular dependencies.
      allow get: if isOwner(userId);
      // Only an existing admin can grant/revoke admin status.
      allow write: if isAdmin();
      // Disallow listing all admins for security.
      allow list: if false;
    }

    // ==============================
    // Messages
    // ==============================
    match /messages/{messageId} {
      allow create: if isValidMessage();
      allow get, list, update, delete: if isAdmin();
    }

    // ==============================
    // Newsletter Subscribers
    // ==============================
    match /newsletter_subscribers/{subscriberId} {
      allow create: if isValidSubscription();
      allow read, list, update, delete: if isAdmin();
    }
  }
}
